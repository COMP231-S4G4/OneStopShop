					</tr>
					<tr>
						<td class="font-weight-bold">@Html.DisplayNameFor(model => model.Shoulder)</td>
						<td>@Html.DisplayFor(model => model.Shoulder)</td>
					</tr>
					<tr>
						<td class="font-weight-bold">@Html.DisplayNameFor(model => model.Sleeve)</td>
						<td>@Html.DisplayFor(model => model.Sleeve)</td>
					</tr>
					<tr>
						<td class="font-weight-bold">@Html.DisplayNameFor(model => model.Waist)</td>
						<td>@Html.DisplayFor(model => model.Waist)</td>
					</tr>
				</table>
			</div>
		}
		@if (Model.ProductType == "bottom" || Model.ProductType == "both")
		{
			<div id="bottom">
				@*<h3 class="text-uppercase text-center">bottom</h3>*@
