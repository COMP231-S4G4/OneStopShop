@model CustomOrders

@{
	ViewData["Title"] = "Custom Order";
}

<head>
	<link href="~/css/AddProduct.css" rel="stylesheet" />
</head>


<h2>Customized Order Form</h2>

<form action="CustomizedOrderForm">
	<div class="customer-info">
		<div class="form-group">
			<label asp-for="email" class="control-label"></label>
			<input asp-for="email" class="form-control" />
			<span asp-validation-for="email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PhoneNum" class="control-label"></label>
			<input asp-for="PhoneNum" class="form-control" />
			<span asp-validation-for="PhoneNum" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description" class="control-label"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ProductType" class="control-label"></label>
			<input asp-for="ProductType" class="form-control" />
			<span asp-validation-for="ProductType" class="text-danger"></span>
		</div>
		<!--<div class="form-group">
		<label for="province">Province: </label>
		<input type="text" id="province" name="province" />-->
		@*<label asp-for="province" class="control-label"></label>
		<input asp-for="province" class="form-control" />
		<span asp-validation-for="province" class="text-danger"></span>*@
		<!--</div>-->
	</div>

	<div class="top">
		<div class="form-group">
			<label asp-for="Chest" class="control-label"></label>
			<input asp-for="Chest" class="form-control" />
			<span asp-validation-for="Chest" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Neck" class="control-label"></label>
			<input asp-for="Neck" class="form-control" />
			<span asp-validation-for="Neck" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Waist" class="control-label"></label>
			<input asp-for="Waist" class="form-control" />
			<span asp-validation-for="Waist" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Shoulder" class="control-label"></label>
			<input asp-for="Shoulder" class="form-control" />
			<span asp-validation-for="Shoulder" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Sleeve" class="control-label"></label>
			<input asp-for="Sleeve" class="form-control" />
			<span asp-validation-for="Sleeve" class="text-danger"></span>
		</div>
	</div>

	<div class="bottom">
		<div class="form-group">
			<label for="Waist">Waist: </label>
			<input type="text" id="Waist" name="Waist" />
			@*<label asp-for="Waist" class="control-label"></label>
				<input asp-for="Waist" class="form-control" />
				<span asp-validation-for="Waist" class="text-danger"></span>*@
		</div>
		<div class="form-group">
			<label for="Hip">Hip: </label>
			<input type="text" id="Hip" name="Hip" />
			@*<label asp-for="Hip" class="control-label"></label>
				<input asp-for="Hip" class="form-control" />
				<span asp-validation-for="Hip" class="text-danger"></span>*@
		</div>
		<div class="form-group">
			<label for="InseamLength">InseamLength: </label>
			<input type="text" id="InseamLength" name="InseamLength" />
			@*<label asp-for="InseamLength" class="control-label"></label>
				<input asp-for="InseamLength" class="form-control" />
				<span asp-validation-for="InseamLength" class="text-danger"></span>*@
		</div>
		<div class="form-group">
			<label for="FullLength">FullLength: </label>
			<input type="text" id="FullLength" name="FullLength" />
			@*<label asp-for="FullLength" class="control-label"></label>
				<input asp-for="FullLength" class="form-control" />
				<span asp-validation-for="FullLength" class="text-danger"></span>*@
		</div>
		<div class="form-group">
			<label for="AnkleLength">AnkleLength: </label>
			<input type="text" id="AnkleLength" name="AnkleLength" />
			@*<label asp-for="AnkleLength" class="control-label"></label>
				<input asp-for="AnkleLength" class="form-control" />
				<span asp-validation-for="AnkleLength" class="text-danger"></span>*@
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-success" />
	</div>
</form>