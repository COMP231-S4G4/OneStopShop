@model Store

@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Dashboard";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/Dashboard.css" />
</head>

<div class="dashboardContainer">
    <h2>Dashboard</h2>
    <h3>@Model.StoreName</h3>
    <input type="hidden" asp-for="StoreId" />

    <div class="container-grid">
        <a asp-controller="Products" asp-action="Index" asp-route-id="@Model.StoreId">
            <div class="gallery">
                <img src="~/images/product.png" />
                <div class="desc">
                    <h4>Products</h4>
                </div>
            </div>
        </a>

        <a asp-action="Orders" asp-route-id="@Model.StoreId">
            <div class="gallery">
                <img src="~/images/dashboard_orders.jpg" />
                <div class="desc">
                    <h4>Order</h4>
                </div>
            </div>
        </a>
        <a asp-controller="Blogs" asp-action="Index" asp-route-StoreId="@Model.StoreId">
            <div class="gallery">
                <img src="~/images/dashboard_blog.png" />
                <div class="desc">
                    <h4>Blogs</h4>
                </div>
            </div>
        </a>
        <a asp-controller="Subscribers" asp-action="Index" asp-route-StoreId="@Model.StoreId">
            <div class="gallery">
                <img src="~/images/dashboard_subscribers.png" />
                <div class="desc">
                    <h4>Subscribers</h4>
                </div>
            </div>
        </a>
        <a asp-controller="CustomOrders" asp-action="Index" asp-route-id="@Model.StoreId">
            <div class="gallery">
                <img src="~/images/dashboard_orders.jpg" />
                <div class="desc">
                    <h4>CustomOrders</h4>
                </div>
            </div>
        </a>
    </div>
</div>