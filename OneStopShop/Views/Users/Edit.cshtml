@model OneStopShop.Models.Users

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/Edit.css" rel="stylesheet" />

<div class="details-container">
	<h4>Edit User</h4>
	<hr />
		<div class="col-md-4">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="UserID" />
				<div class="form-group">
					<label asp-for="Username" class="control-label"></label>
					<input asp-for="Username" class="form-control" />
					<span asp-validation-for="Username" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password" class="control-label"></label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="Address" class="control-label"></label>
					<input asp-for="Address" class="form-control" />
					<span asp-validation-for="Address" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="email" class="control-label"></label>
					<input asp-for="email" class="form-control" />
					<span asp-validation-for="email" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="PhoneNum" class="control-label"></label>
					<input asp-for="PhoneNum" class="form-control" />
					<span asp-validation-for="PhoneNum" class="text-danger error"></span>
				</div>

				<input asp-for="AccountType" class="form-control" asp-route-value="@Model.AccountType" hidden />

				<div class="form-group">
					<label asp-for="BankName" class="control-label"></label>
					<input asp-for="BankName" class="form-control" />
					<span asp-validation-for="BankName" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="AccountNumber" class="control-label"></label>
					<input asp-for="AccountNumber" class="form-control accno" placeholder="Account Number" minlength="7" maxlength="12" />
					<span asp-validation-for="AccountNumber" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="TransitNumber" class="control-label"></label>
					<input asp-for="TransitNumber" class="form-control" placeholder="Transit Number" minlength="5" maxlength="5" />					
					<span asp-validation-for="TransitNumber" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<label asp-for="InstitutionNumber" class="control-label"></label>
					<input asp-for="InstitutionNumber" class="form-control" placeholder="Institution Number" minlength="3" maxlength="3" />
					<span asp-validation-for="InstitutionNumber" class="text-danger error"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</form>
		</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}