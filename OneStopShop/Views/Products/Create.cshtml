@model OneStopShop.Models.ViewModels.ProductImageViewModel

@{
	ViewData["Title"] = "Create";
}

<head><link href="~/css/AddProduct.css" rel="stylesheet" /> </head>

<h4 class="text-center">Add Product</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form enctype="multipart/form-data" asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ProductName" class="control-label"></label>
				<input asp-for="ProductName" class="form-control" />
				<span asp-validation-for="ProductName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductDescription" class="control-label"></label>
				<input asp-for="ProductDescription" class="form-control" />
				<span asp-validation-for="ProductDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductPrice" class="control-label"></label>
				<input asp-for="ProductPrice" class="form-control" />
				<span asp-validation-for="ProductPrice" class="text-danger"></span>
			</div>
			@*<div class="form-group">
				<label asp-for="ProductCreatedDate" class="control-label"></label>
				<input asp-for="ProductCreatedDate" class="form-control" />
				<span asp-validation-for="ProductCreatedDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductModifiedDate" class="control-label"></label>
				<input asp-for="ProductModifiedDate" class="form-control" />
				<span asp-validation-for="ProductModifiedDate" class="text-danger"></span>
			</div>*@
			<div class="form-group">
				<label asp-for="ProductImage" class="control-label"></label>
				<div class="custom-file">
					<input asp-for="ProductImage" class="custom-file-input" id="customFile" />
					<label class="custom-file-label" for="customFile">Choose File</label>
				</div>
				<span asp-validation-for="ProductImage" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductSize" class="control-label"></label>
				<input asp-for="ProductSize" class="form-control" />
				<span asp-validation-for="ProductSize" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductColor" class="control-label"></label>
				<input asp-for="ProductColor" class="form-control" />
				<span asp-validation-for="ProductColor" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script type="text/javascript">

		// Add the following code if you want the name of the file appear on select
		$(".custom-file-input").on("change", function () {
			var fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
		});
	</script>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#errorFile").hide()

        $(".image").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next(".image2").html(fileName);
        })
    });

    function previewFile(input) {
        var file = $("input[type=file]").get(0).files[0];
        var fsize = $("input[type=file]")[0].files[0].size;
        if (file) {

            if (fsize > 1048576 * 5) //do something if file size more than 1 mb (1048576)
            {
                $("#submitForm").attr("disabled", true)
                $("#errorFile").show()

            } else {
                console.log(file);
                var reader = new FileReader();
                $("#errorFile").hide()
                $("#submitForm").attr("disabled", false)
                reader.onload = function () {
                    $("#previewImg").attr("src", reader.result);
                }

                reader.readAsDataURL(file);
            }

        }
    }
</script>