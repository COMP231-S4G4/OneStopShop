@model OneStopShop.Models.Product

@{ ViewData["Title"] = "Create"; }


<header>
    <link href="~/css/AddProduct.css" rel="stylesheet" />
</header>
<h4>Add Product</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" >
                <label asp-for="StoreId" class="control-label socioverse-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId" ></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ProductCreatedDate" class="control-label"></label>
                <input asp-for="ProductCreatedDate" class="form-control" />
                <span asp-validation-for="ProductCreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModifiedDate" class="control-label"></label>
                <input asp-for="ProductModifiedDate" class="form-control" />
                <span asp-validation-for="ProductModifiedDate" class="text-danger"></span>
            </div>*@

        <div class="form-group">
            <label asp-for="EventBannerFile" id="image2"></label>
            <input asp-for="EventBannerFile" id="image" accept="image/*" onchange="previewFile(this)" class="form-control">

        </div>
            <div class="form-group">
                <label asp-for="ProductSize" class="control-label"></label>
                <select class="form-control">
                    <option value="0">Please select Size</option>
                    <option value="1">XS</option>
                    <option value="2">Small</option>
                    <option value="3">Medium</option>
                    <option value="4">Large</option>
                    <option value="5">XL</option>
                </select>
                @*<input asp-for="ProductSize" class="form-control" />*@
                <span asp-validation-for="ProductSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductColor" class="control-label"></label>
                <input asp-for="ProductColor" class="form-control" />
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6 p-4"> <img id="previewImg" asp-for="ProductImage" src="/images/default-banner.jpg" asp-append-version="true" style="border:1px solid grey; width:auto; height:300px; " /></div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-3">
                <input type="submit" id="submitForm" class="btn btn-info form-control" value="Submit" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control"> Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#errorFile").hide()

        $(".image").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next(".image2").html(fileName);
        })
    });

    function previewFile(input) {
        var file = $("input[type=file]").get(0).files[0];
        var fsize = $("input[type=file]")[0].files[0].size;
        if (file) {

            if (fsize > 1048576 * 5) //do something if file size more than 1 mb (1048576)
            {
                $("#submitForm").attr("disabled", true)
                $("#errorFile").show()

            } else {
                console.log(file);
                var reader = new FileReader();
                $("#errorFile").hide()
                $("#submitForm").attr("disabled", false)
                reader.onload = function () {
                    $("#previewImg").attr("src", reader.result);
                }

                reader.readAsDataURL(file);
            }

        }
    }
</script>