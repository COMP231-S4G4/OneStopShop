@model OneStopShop.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/ProductDetails.css" />
</head>
<h2>Product Details</h2>
<div>
    <img src="~/@Model.ProductImage" id="Image" />
</div>
<div id="divInline">
    <table>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductName)</td>
            <td>@Html.DisplayFor(model => model.ProductName)</td>
        </tr>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductDescription)</td>
            <td>@Html.DisplayFor(model => model.ProductDescription)</td>
        </tr>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductSize)</td>
            <td>@Html.DisplayFor(model => model.ProductSize)</td>
        </tr>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductPrice)</td>
            <td>@Html.DisplayFor(model => model.ProductPrice)</td>
        </tr>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductColor)</td>
            <td>@Html.DisplayFor(model => model.ProductColor)</td>
        </tr>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductCreatedDate)</td>
            <td>@Html.DisplayFor(model => model.ProductCreatedDate)</td>
        </tr>
        <tr>
            <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductModifiedDate)</td>
            <td>@Html.DisplayFor(model => model.ProductModifiedDate)</td>
        </tr>
    </table>
    <div>
        <a id="Edit" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
        <a id="Delete" asp-action="Delete" asp-route-id="@Model.ProductID">Delete</a>
        @if (Model.IsAddedToCart == false)
        {
            <form id="@Model.ProductID" asp-action="AddToCart"
                  method="post">

                <input type="hidden" asp-for="ProductID" />

                <span class="card-text p-1">

                    <button id="AddToCart" type="submit"
                            class="btn btn-success btn-sm pull-right">
                        Add to Cart
                    </button>
                </span>
            </form>
        }
        else
        {
            <form asp-controller="Products" asp-action="RemoveCartItem" asp-route-id="@Model.ProductID"
                  method="post">

                <input type="hidden" asp-route-id="@Model.ProductID" />

                <span class="col-sm-2 float-right">

                    <button id="AddToCart" type="submit"
                            class="btn btn-danger btn-sm pull-right">
                        Remove From Cart
                    </button>
                </span>
            </form>
        }
    </div>
</div>
<div>
    <a id="Back" asp-action="Index" asp-route-id="@Model.StoreId">Go back</a>
</div>