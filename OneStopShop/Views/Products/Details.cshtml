@model OneStopShop.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/ProductDetails.css" />
</head>
<h2>Product Details</h2>
<div id="divInline">
    <img id="Image" src="@Url.Content(Model.ProductImage)" />
</div>
<div id="divInline">
    <table>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ProductName)</td>
            <td>@Html.DisplayFor(model => model.ProductName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ProductDescription)</td>
            <td>@Html.DisplayFor(model => model.ProductDescription)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ProductSize)</td>
            <td>@Html.DisplayFor(model => model.ProductSize)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ProductPrice)</td>
            <td>@Html.DisplayFor(model => model.ProductPrice)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ProductColor)</td>
            <td>@Html.DisplayFor(model => model.ProductColor)</td>
        </tr>
    </table>
</div>

<div>
    <a asp-action="Index" asp-route-id=@Html.DisplayFor(model => model.store.StoreId)>Go back</a>
</div>
