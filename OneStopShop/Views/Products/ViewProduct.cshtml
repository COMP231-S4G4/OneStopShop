@model Product

@{
    ViewData["Title"] = "Details";
    Layout = "_HomeLayout";
}

<head>
	<link rel="stylesheet" href="~/css/ProductPage.css" />
</head>

<div class="product-container">
	<div class="product-image">
		<img src="~/@Model.ProductImage" id="Image" />
	</div>
	<div class="product-details">
		<header>
			<h1 class="title">@Html.DisplayFor(model => model.ProductName)</h1>
			<span class="colorcat">@Html.DisplayFor(model => model.ProductColor)</span>
			<div class="rating">
				<a href="#!" class="sActive">★</a>
				<a href="#!" class="sActive">★</a>
				<a href="#!" class="sActive">★</a>
				<a href="#!">★</a>
				<a href="#!">★</a>
			</div>
			<div class="price">
				<span class="current">@String.Format("{0:c}", Model.ProductPrice)</span>
			</div>
		</header>
		<article>
			<h4>Description</h4>
			<p>@Html.DisplayFor(model => model.ProductDescription)</p>
		</article>
        <div class="controls">
            <div class="size">
                <h4>size</h4>
                <div id="sizes">
					<button class="btn text-uppercase text-center size-btn">
						@Html.DisplayFor(model => model.ProductSize)
					</button>
                </div>

            </div>
            <div>
                <form id="@Model.ProductID" asp-controller="Cart" asp-action="AddToCart"
                      method="post">
                    <input type="hidden" asp-for="ProductID" />
                    <span class="card-text p-1">
                        <button id="AddToCart" type="submit">
                            <img src="http://co0kie.github.io/codepen/nike-product-page/cart.png" alt="">
                            <span>add to cart</span>
                        </button>
                    </span>
                </form>
            </div>
            <div class="wishlistBtn">
                <form asp-controller="Products" asp-action="AddToWishlist" asp-route-id="@Model.ProductID"
                      method="post">
                    <input type="hidden" asp-for="ProductID" />
                    <span class="card-text p-1">
                        <button id="AddToCart" type="submit">
							<span>Add to WishList</span>
                        </button>
                    </span>
                </form>
            </div>
        </div>
	</div>
</div>